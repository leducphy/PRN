@page
@model CeilInnHotelSystem.Pages.CustomerPage.AddCustomerModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="ClassRoom">Class List</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Add Class</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="CustomerAddRequest.FirstName" class="col-sm-12 col-md-2 col-form-label">First Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.FirstName" class="form-control" type="text" placeholder="First Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerAddRequest.LastName" class="col-sm-12 col-md-2 col-form-label">Last Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.LastName" class="form-control" type="text" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerAddRequest.PhoneNumber" class="col-sm-12 col-md-2 col-form-label">Phone Number</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.PhoneNumber" class="form-control" type="text" placeholder="Phonenumber">
                        </div>
                    </div><div class="form-group row">
                        <label asp-for="CustomerAddRequest.EmergencyName" class="col-sm-12 col-md-2 col-form-label">EmergencyName</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.EmergencyName" class="form-control" type="text" placeholder="EmergencyName">
                        </div>
                    </div><div class="form-group row">
                        <label asp-for="CustomerAddRequest.EmergencyPhone" class="col-sm-12 col-md-2 col-form-label">EmergencyPhone</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.EmergencyPhone" class="form-control" type="text" placeholder="EmergencyPhone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerAddRequest.UserName" class="col-sm-12 col-md-2 col-form-label">UserName</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.UserName" class="form-control" type="text" placeholder="UserName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerAddRequest.Password" class="col-sm-12 col-md-2 col-form-label">Password</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="CustomerAddRequest.Password" class="form-control" type="text" placeholder="Password">
                        </div>
                    </div>
                    <div class="btn-list">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="ClassRoom" type="submit" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>